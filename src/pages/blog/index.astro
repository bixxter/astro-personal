---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";

const posts = await getCollection("blog");
---

<Layout title="Blog - bixxter">
  <section id="#posts">
    <h1 class="text-2xl">Blog</h1>
    <p>Here are some of my thoughts and ideas.</p>

    {
      posts.map(({ data, slug }) => (
        <article class="flex items-center space-x-4">
          <div class="overlay">
            <a href={`/blog/${slug}`}>{data.title}</a>
          </div>
        </article>
      ))
    }
  </section>
</Layout>
